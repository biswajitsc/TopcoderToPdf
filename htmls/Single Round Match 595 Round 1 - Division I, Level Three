                  <tr>
                   <td class="statText">
                    <pre>{0,1,2,1,0}</pre>
                   </td>
                  </tr>
                  <tr>
                   <td class="statText">
                    <pre>{1000,500,200,500,1000}</pre>
                   </td>
                  </tr>
                 </table>
