            <tr>
             <td class="statText" colspan="2">
              <h3>
               Constraints
              </h3>
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              <b>
               width
              </b>
              will be between 1 and 100 inclusive
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              <b>
               length
              </b>
              will be between 1 and 100 inclusive
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              <b>
               length
              </b>
              -
              <b>
               width
              </b>
              will be 0 or 1
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              <b>
               colorList
              </b>
              will have between 1 and 10 elements inclusive
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              each element of
              <b>
               colorList
              </b>
              will have between 1 and 15 characters inclusive
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              each element of
              <b>
               colorList
              </b>
              will contain only uppercase letters 'A'-'Z'
             </td>
            </tr>
            <tr>
             <td align="center" class="statText" valign="top">
              -
             </td>
             <td class="statText">
              each element of
              <b>
               colorList
              </b>
              will be distinct
             </td>
            </tr>
